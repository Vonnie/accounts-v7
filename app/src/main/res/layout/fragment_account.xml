<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll"
    tools:context="com.kinsey.passwords.AccountActivityFragment"
    tools:showIn="@layout/activity_account">


    <EditText
        android:id="@+id/acc_corp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/accedit_corp_name_hint"
        android:inputType="textCapWords|textNoSuggestions" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/accedit_user_name_hint">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/acc_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/accedit_user_email_hint">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/acc_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"

                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/acc_img_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:contentDescription="@string/acct_show_website"
                    app:srcCompat="@android:drawable/ic_menu_view" />

                <EditText
                    android:id="@+id/acc_corp_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/accedit_corp_website_hint"
                    android:inputType="textNoSuggestions" />

            </LinearLayout>

            <EditText
                android:id="@+id/addedit_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/accedit_notes_hint"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/acc_seq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/accedit_seq_hint"
                android:inputType="number" />

            <EditText
                android:id="@+id/acc_ref_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/accedit_ref_from_hint"
                android:inputType="number" />

            <EditText
                android:id="@+id/acc_ref_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/accedit_ref_to_hint"
                android:inputType="number" />

            <TextView
                android:id="@+id/acc_open_date_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accedit_date_open_label" />

            <DatePicker
                android:id="@+id/acc_datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/acc_account_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/addedit_actvy_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>