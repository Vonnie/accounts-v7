<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kinsey.passwords.AccountActivityFragment"
    tools:showIn="@layout/activity_account"
    android:id="@+id/content_account">


<EditText
        android:id="@+id/acc_corp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/accedit_corp_name_hint"
        android:inputType="textCapWords|textNoSuggestions" />

    <EditText
        android:id="@+id/acc_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/accedit_user_name_hint"
        android:inputType="textNoSuggestions" />

    <EditText
        android:id="@+id/acc_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/accedit_user_email_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/acc_corp_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/accedit_corp_website_hint"
        android:inputType="textNoSuggestions" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/acc_notes"
        android:hint="@string/accedit_notes_hint" />

    <Button
        android:id="@+id/acc_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:text="@string/accedit_save_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acc_open_date" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acc_account_id" />

</LinearLayout>