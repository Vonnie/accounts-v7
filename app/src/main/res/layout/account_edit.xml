<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/acc_corp_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/accedit_corp_name_hint"
        android:inputType="textCapWords|textNoSuggestions"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/acc_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/accedit_user_name_hint"
        android:inputType="textNoSuggestions"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/acc_corp_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/acc_corp_name"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/acc_user_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/accedit_user_email_hint"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/acc_user_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/acc_user_name"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/acc_corp_website"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/accedit_corp_website_hint"
        android:inputType="textNoSuggestions"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/acc_user_email"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/acc_user_email"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/acc_open_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/accedit_open_date"
        android:inputType="text"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/acc_corp_website"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/acc_corp_website"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/acc_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/accedit_notes_hint"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/acc_open_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_open_date" />

    <Button
        android:id="@+id/acc_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:text="@string/accedit_save_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/acc_notes"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/acc_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@android:drawable/ic_menu_delete"
        android:text="@string/delete_cap"
        app:layout_constraintLeft_toRightOf="@+id/acc_save_button"
        app:layout_constraintTop_toBottomOf="@+id/acc_notes" />


</android.support.constraint.ConstraintLayout>