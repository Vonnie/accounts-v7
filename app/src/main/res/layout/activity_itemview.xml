<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/lbl_corp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corp name" />

    <EditText
        android:id="@+id/txt_corp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <ImageButton
        android:id="@+id/imgbtn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_globe"
        app:layout_constraintTop_toBottomOf="@+id/txt_corp_name"
        app:srcCompat="@drawable/selector_edit" />

    <ImageButton
        android:id="@+id/imgbtn_globe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_delete"
        app:layout_constraintTop_toBottomOf="@+id/txt_corp_name"
        app:srcCompat="@drawable/selector_globe" />

    <ImageButton
        android:id="@+id/imgbtn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_save"
        app:layout_constraintTop_toBottomOf="@+id/txt_corp_name"
        app:srcCompat="@drawable/selector_delete" />

    <ImageButton
        android:id="@+id/imgbtn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_corp_name"
        app:srcCompat="@drawable/selector_save" />

</android.support.constraint.ConstraintLayout>