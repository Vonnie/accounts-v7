<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/srli_corp_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:tag="@string/tag_large"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tli_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/srli_corp_name"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/srli_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/tli_open_date"
        app:layout_constraintTop_toBottomOf="@+id/srli_corp_name" />

    <TextView
        android:id="@+id/tli_open_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/srli_acct_id"
        app:layout_constraintTop_toBottomOf="@+id/srli_corp_name" />

    <!--<TextView-->
        <!--android:id="@+id/tli_seq"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:layout_marginTop="0dp"-->
        <!--app:layout_constraintRight_toLeftOf="@+id/tli_acct_id"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/srli_corp_name" />-->


    <TextView
        android:id="@+id/tli_acct_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/srli_corp_name"
        android:layout_marginEnd="16dp" />


    <ImageButton
        android:id="@+id/tli_account_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/up_button_description"
        app:layout_constraintRight_toLeftOf="@+id/tli_account_down"
        app:layout_constraintTop_toTopOf="@+id/srli_corp_name"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:id="@+id/tli_account_down"
        app:layout_constraintBottom_toBottomOf="@+id/tli_account_up"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/down_button_description" />


